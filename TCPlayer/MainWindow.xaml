<Window x:Class="TCPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:TCPlayer.Controls"
        xmlns:props="clr-namespace:TCPlayer.Properties"
        Style="{StaticResource Window}"
        x:Name="MainWin"
        Icon="icon.png"
        mc:Ignorable="d"
        Left="{Binding Source={x:Static props:Settings.Default}, Path=Left, Mode=TwoWay}"
        Top="{Binding Source={x:Static props:Settings.Default}, Path=Top, Mode=TwoWay}"
        Topmost="{Binding ElementName=AllWaysTop, Path=IsChecked}"
        SourceInitialized="MainWin_SourceInitialized"
        Closing="MainWin_Closing"
        Title="BassPlayer2" Height="297" Width="558">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo
            ProgressState="None" 
            ProgressValue="0" 
            x:Name="Taskbar"
            ThumbnailClipMargin="0,26,425,140">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfo
                    Description="Play/Pause"
                    Click="ThumbButtonInfo_Click"
                    ImageSource="Style/taskbar-play-pause.png"/>
                <ThumbButtonInfo
                    Description="Previous track"
                    Click="ThumbButtonInfo_Click"
                    ImageSource="Style/taskbar-skip-previous.png"/>
                <ThumbButtonInfo
                    Description="Next track"
                    Click="ThumbButtonInfo_Click"
                    ImageSource="Style/taskbar-skip-next.png"/>
                <ThumbButtonInfo
                    Description="Mute/UnMute"
                    Click="ThumbButtonInfo_Click"
                    ImageSource="Style/taskbar-volume-off.png"/>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="26"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid
            x:Name="TitleBar"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            MouseDown="TitleBar_MouseDown"
            Background="{StaticResource WindowTitleBar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Margin="5,0"
                Text="{Binding ElementName=MainWin, Path=Title}"/>
            <Button
                Content="{StaticResource IconInformation}"
                Grid.Column="1"
                ToolTip="About ..."
                x:Name="BtnAbout"
                Click="BtnAbout_Click"/>
            <ToggleButton
                Grid.Column="2"
                IsChecked="{Binding Source={x:Static props:Settings.Default}, Path=TopMost, Mode=TwoWay}"
                x:Name="AllWaysTop">
                <ToggleButton.Resources>
                    <Style TargetType="ToggleButton">
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter Property="Content" Value="{StaticResource IconBack}"/>
                                <Setter Property="ToolTip" Value="Always top: off"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Content" Value="{StaticResource IconFront}"/>
                                <Setter Property="ToolTip" Value="Always top: on"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{x:Null}"/>
                    </Style>
                </ToggleButton.Resources>
            </ToggleButton>
            <Button
                Grid.Column="3"
                x:Name="TitlebarMinimize"
                Click="TitlebarMinimize_Click"
                ToolTip="Minimize to Tray"
                Content="{StaticResource IconMinimize}"/>
            <Button 
                Grid.Column="4"
                x:Name="TitlebarClose"
                ToolTip="Exit application"
                Content="{StaticResource IconClose}"
                Click="TitlebarClose_Click"/>
        </Grid>
        <Border
            Panel.ZIndex="100"
            BorderThickness="3"
            BorderBrush="Yellow"
            Grid.Row="1"
            Visibility="Collapsed"
            Grid.RowSpan="10"
            x:Name="OverLay"
            Margin="10"
            Background="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <StackPanel 
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Content="[ Ok ]"
                        Width="100"
                        x:Name="OverLayOk"
                        Click="OverLayOk_Click"
                        Foreground="White"
                        Margin="5,0"/>
                    <Button 
                        Content="[ Cancel ]"
                        Width="100"
                        x:Name="OverLayClose"
                        Click="OverLayClose_Click"
                        Foreground="White"
                        Margin="5,0"/>
                </StackPanel>
                <Grid
                    Grid.Row="0"
                    x:Name="OverLayContent"
                    Background="{StaticResource Button.Pressed.Background}"/>
            </Grid>
        </Border>
        <TabControl
            TabStripPlacement="Bottom"
            x:Name="MainView"
            Grid.Row="1"
            Grid.RowSpan="2">
            <TabItem
                Header="[ Player ]">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="135"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <controls:SongData
                        Grid.Row="0"
                        x:Name="SongDat"/>
                    <Slider
                        Margin="10,0"
                        x:Name="SeekSlider"
                        Thumb.DragCompleted="SeekSlider_DragCompleted"
                        Thumb.DragStarted="SeekSlider_DragStarted"
                        ValueChanged="SeekSlider_ValueChanged"
                        Grid.Row="1"/>
                    <StackPanel
                        Margin="10,0"
                        Grid.Row="2"
                        Orientation="Horizontal">
                        <TextBlock
                            x:Name="TbFullTime"
                            Text="00:00:00"/>
                        <TextBlock Text=" / "/>
                        <TextBlock
                            x:Name="TbCurrTime"
                            Text="00:00:00"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Grid.Row="3">
                        <Button
                            ToolTip="Play / Pause"
                            x:Name="BtnPlayPause"
                            Click="DoAction"
                            Content="{StaticResource IconPlayPause}"/>
                        <Button
                            ToolTip="Stop"
                            x:Name="BtnStop"
                            Click="DoAction"
                            Content="{StaticResource IconStop}"
                            Margin="4,0"/>
                        <Button
                            ToolTip="Seek back"
                            x:Name="BtnSeekBack"
                            Click="DoAction"
                            Content="{StaticResource IconSeekBack}"/>
                        <Button
                            ToolTip="Seek forward"
                            x:Name="BtnSeekFwd"
                            Click="DoAction"
                            Content="{StaticResource IconSeekForward}"
                            Margin="4,0"/>
                        <Button
                            ToolTip="Previous track"
                            x:Name="BtnPrevTrack"
                            Click="DoAction"
                            Content="{StaticResource IconPrevious}"/>
                        <Button
                            ToolTip="Next Track"
                            x:Name="BtnNextTrack"
                            Click="DoAction"
                            Content="{StaticResource IconNext}"
                            Margin="4,0"/>
                        <ToggleButton 
                            ToolTip="Mute / Unmute"
                            x:Name="BtnMute"
                            Click="BtnMute_Click"
                            Content="{StaticResource IconMute}"/>
                        <Slider
                            Minimum="0"
                            VerticalAlignment="Center"
                            Maximum="1"
                            Value="1"
                            Margin="10,0,0,0"
                            x:Name="VolSlider"
                            ValueChanged="VolSlider_ValueChanged"
                            Grid.Column="1"
                            Width="120">
                        </Slider>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem
                Header="[ Playlist ]">
                <controls:PlayList
                    ItemDoubleClcik="PlayList_ItemDoubleClcik"
                    x:Name="PlayList"/>
            </TabItem>
        </TabControl>
        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="2"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right">
            <Button
                Foreground="White"
                Content="[ Change output device... ]"
                x:Name="BtnChangeDev"
                Click="BtnChangeDev_Click"/>
        </StackPanel>
    </Grid>
</Window>
