<UserControl
    x:Class="TCPlayer.Controls.RadioStations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:code="clr-namespace:TCPlayer.Code"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TCPlayer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TCPlayer.Properties"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ComboBox
            x:Name="FileSelector"
            Grid.Column="1"
            Margin="2"
            HorizontalAlignment="Right"
            Background="Transparent"
            SelectionChanged="FileSelector_SelectionChanged">
        </ComboBox>
        <TextBlock
            Grid.Row="0"
            Margin="5"
            Text="{x:Static p:Resources.Radio_StationsLabel}" />
        <TreeView
            x:Name="RadioView"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            MouseDoubleClick="RadioView_MouseDoubleClick" />
    </Grid>
</UserControl>
