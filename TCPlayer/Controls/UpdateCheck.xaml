<Window
    x:Class="TCPlayer.Controls.UpdateCheck"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:props="clr-namespace:TCPlayer.Properties"
    Title="{x:Static props:Resources.UpdateCheck_Title}"
    Width="350"
    Height="200"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            x:Name="Header"
            Margin="5"
            FontSize="20"
            Text="" />
        <TextBlock
            Margin="10,5"
            Text="{x:Static props:Resources.UpdateCheck_Text}"
            TextWrapping="Wrap" />
        <Button
            Margin="10,0"
            Content="https://github.com/webmaster442/TCPlayer/releases"
            Style="{StaticResource LinkButton}" />
        <Button
            x:Name="BtnOk"
            Width="100"
            Margin="5,5"
            HorizontalAlignment="Right"
            Click="BtnOk_Click"
            Content="{x:Static props:Resources.Dialog_Ok}" />
    </StackPanel>

</Window>
